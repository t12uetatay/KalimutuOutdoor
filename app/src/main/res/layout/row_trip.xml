<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:scaleType="fitXY"
                android:src="@drawable/picture"
                android:layout_centerInParent="true"/>


            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>

            <TextView
                android:id="@+id/arsip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diarsipkan"
                android:layout_centerInParent="true"
                android:background="@drawable/background_arsip"
                android:padding="20dp"
                android:textColor="@color/white"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="-16dp"
            android:layout_marginRight="8dp">

            <TextView
                android:id="@+id/textPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/blue_rounded_shape"
                android:padding="8dp"
                android:text="$190/day"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_toLeftOf="@+id/act_next"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Audi A7 2018"
                    android:textSize="14sp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textStock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Warsaw, Poland"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/textDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Warsaw, Poland"
                    android:maxLines="2"
                    android:minLines="2"
                    android:visibility="gone"
                    android:textSize="12sp" />


            </LinearLayout>

            <ImageView
                android:id="@+id/act_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_arrow_forward_24"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:visibility="gone"
                android:padding="8dp"/>
        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>